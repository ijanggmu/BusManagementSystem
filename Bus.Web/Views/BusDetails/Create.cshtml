@{
}
<div class="container">
<h1>Add a Bus</h1>
<div>
    <form method="post" asp-action="Create" >
        <div>
        <label asp-for=BusNo>Bus NO</label>
        <input type="number" asp-for="BusNo" class="form-control"/>
        </div>
        <div>
            <label asp-for="BusName">Bus Name</label>
            <input type="text" class="form-control" asp-for="BusName" />
        </div>
        <br />
        <div>
            <label asp-for="routeId">Route</label>
            <select asp-for="routeId" 
            asp-items="@(new SelectList(Model.routeList,"routeId","routeName"))"></select>  
        </div>
        <div>
            <button class="btn btn-success mt-2" type="submit" value="submit">ADD</button>
            <a class="btn btn-dark mt-2 " asp-action="index">Back to List</a>
        </div>
    </form>
</div>
</div>