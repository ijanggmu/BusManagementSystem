@model Bus.Web.Models.RouteViewModel


<form method="post" asp-action="Create">
    <div class="border p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <h2 class="text-info pl-3">Add New Route</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="RouteName"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="RouteName" class="form-control" required />
                        <span asp-validation-for="RouteName" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="NumberOfStops"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="NumberOfStops" class="form-control" />
                        <span asp-validation-for="NumberOfStops" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="BusCount"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="BusCount" class="form-control" />
                        <span asp-validation-for="BusCount" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="RouteMapLink"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="RouteMapLink" class="form-control" />
                        <span asp-validation-for="RouteMapLink" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-8 offset-4 row">

                        <div class="col">
                            <input type="submit" class="btn btn-info w-100" value="Create" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-100"><i class="fas fa-step-backward"></i> Back</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @* Keep this empty *@
            </div>
        </div>
    </div>
</form>

@section Scripts{

    @{
        <partial name="_ValidationScriptsPartial" />
    }

}